# general plugin properites
plugin.completion.CompletionPlugin.activate=startup
plugin.completion.CompletionPlugin.name=Completion
plugin.completion.CompletionPlugin.author=Dion Amago
plugin.completion.CompletionPlugin.version=0.1
plugin.completion.CompletionPlugin.docs=index.html
plugin.completion.CompletionPlugin.description=Code completion central.

# dependencies
plugin.completion.CompletionPlugin.depend.0=jdk 1.5
plugin.completion.CompletionPlugin.depend.1=jedit 04.03.99.00


# Plugins menu items
plugin.completion.CompletionPlugin.menu.label=Completion
plugin.completion.CompletionPlugin.menu=completion-complete
completion-complete.label=Completion

# Option panel
plugin.completion.CompletionPlugin.option-pane=completion
options.completion.label=Completion
options.completion.code=new completion.options.CompletionOptionPane();


options.completion.auto-completion.label=Auto Completion Popup Options
options.completion.auto-complete.toggle=Automatically show completion popup
options.completion.auto-complete-delay=After last keystroke, wait (seconds):

options.completion.code-completion.label=Code Completion Options
options.completion.complete-instant.toggle=Immediately complete if possible
options.completion.complete-delay.toggle=Show completion popups where possible
options.completion.auto-complete-popup-get-focus.toggle=Automatic completion popups get focus
options.completion.complete-delay=After popup trigger keystroke, wait (seconds):
options.completion.complete-popup.accept-characters=Accept characters for completion popup
options.completion.complete-popup.insert-characters=Accept characters to insert after completion


#Automatically show popup after some inactivity
completion.auto-complete.toggle=true
completion.auto-complete-delay=1000

# Enable completion
completion.complete-delay.toggle=true
completion.complete-instant.toggle=true

# Initial focus of automatic completion popup
completion.auto-complete-popup-get-focus.toggle=false

# Delay after complete trigger before showing completion popup
completion.complete-delay=500

# Characters that accept the selected completion
completion.complete-popup.accept-characters=\\ \\n\\t
# Characters that are inserted after accepting the selected completion
completion.complete-popup.insert-characters=\\



#Apparently I should set this to true, even though I don't write any data there
plugin.completion.CompletionPlugin.usePluginHome=true







